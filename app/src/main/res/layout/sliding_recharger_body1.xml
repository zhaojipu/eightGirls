<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="#eeeeee"
    android:orientation="vertical">

    <TextView
        android:id="@+id/payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="请选择支付方式"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/wechat_pay"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="21dp"
            android:background="#fd4ea2"
            android:text="微信支付"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/zfb_pay"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@+id/wechat_pay"
            android:background="#ffffff"
            android:text="微信支付"
            android:textColor="#333333"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/pay_method_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="支付方式:"
            android:textColor="#333333"
            />

        <TextView
            android:id="@+id/pay_method_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/pay_method_text"
            android:text="微信支付:"
            android:textColor="#2090e6"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/wechat_pay_rule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pay_method_result"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:text="请点微信、QQ图标获得代充的联系方式、进行购买金币！"
        android:textColor="#333333"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wechat_pay_rule"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:text="25元充值200金币、60元充值500金币、100元充值1000金币、218元充值2000币、525元充值5000金币、1020元充值10000金币"
        android:textColor="#333333"
        />

</LinearLayout>